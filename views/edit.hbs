<h1> Edit user </h1>

<section class="addingUser">

    <form class = "addEdit" method="POST" action="/user/edit">
    {{#each users}}
    <label for="name">Id :</label>
    <input type="radio" name="id" value="{{id}}" checked> {{id}} <br>

    <label for="name">Name</label>
    <input type="text" name="name" value="{{name}}"><br>

    <label for="surname">Surname</label>
    <input type="text" name="surname" value="{{surname}}"><br>

    <label for="dateOfBirth">Date of Birth</label>
    <input type="date" name="dateOfBirth" value="{{dateOfBirth}}"><br>

    <label for="login">Login</label>
    <input type="text" name="login" value="{{login}}"><br>

    <label for="passwordMd5">Password</label>
    <input type="password" name="passwordMd5" value="{{passwordMd5}}"><br>

    <label for="idRole">Id Roli</label>
    <input type="number" name="idRole" value="{{idRole}}"><br>

    <label for="isDeleted">is Deleted</label> 
    <input type="radio" name="isDeleted" value="0" checked> <div> &nbsp 0</div>
    <input type="radio" name="isDeleted" value="1" > <div> &nbsp 1</div>
    
    <br>

    <input type="submit" name="edit" value="Edit User">

     {{else}}
        <p> Problem with this user</p>

    {{/each}}

</form> 